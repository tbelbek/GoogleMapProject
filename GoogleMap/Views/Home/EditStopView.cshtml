@model GoogleMap.Models.StopEditViewModel

@{
    ViewBag.Title = "EditStopView";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="content">
                    <h2 class="content-title">Durak Düzenleme</h2>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            <div align="center">
                                <div class="form-group col-md-6">
                                    @Html.HiddenFor(model => model.Id)
                                    <br>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-addon">Adı</span>
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Su İkmal Durağı" } })
                                    </div>
                                    <br>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-addon">Tipi</span>
                                        @Html.EnumDropDownListFor(m => m.Type, "Durak Tipi Seçiniz", new { @class = "form-control" })
                                    </div>
                                    <br>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-addon">Icon Urli</span>
                                        @Html.EditorFor(model => model.IconUrl, new { htmlAttributes = new { @class = "form-control", @placeholder = "16 piksel boyutunda bir fotograf url'i" } })

                                    </div>
                                    @Html.ValidationMessageFor(model => model.IconUrl, "", new { @class = "text-danger" })
                                    <br>
                                    <br>
                                    <button type="submit" class="btn btn-success btn-lg create-btn">
                                        <span class="glyphicon glyphicon-ok"> </span>
                                        <span> Kaydet ve Liste Sayfasına Dön</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}